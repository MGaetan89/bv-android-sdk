<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.bazaarvoice.bv_android_sdk.ads.AdsFragment">

    <!-- TODO: CurationsFeedItem blank fragment layout -->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Native Ad"
        android:id="@+id/nativeAdBtn"
        android:layout_marginBottom="40dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interstitial Ad"
        android:id="@+id/interstitialAdBtn"
        android:layout_marginBottom="40dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Banner Ad"
        android:id="@+id/bannerAdBtn"/>

</LinearLayout>
