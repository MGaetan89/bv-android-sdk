<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.bazaarvoice.bvsdkdemoandroid.curations.DemoCurationsFragment">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Display Reviews"
            android:id="@+id/displayReviewsBtn"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="32dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Display Question &amp; Answer"
            android:id="@+id/displayQABtn"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/displayReviewsBtn"
            app:layout_constraintLeft_toLeftOf="@+id/displayReviewsBtn"
            app:layout_constraintRight_toRightOf="@+id/displayReviewsBtn" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Display Product Page Stats"
            android:id="@+id/displayProductPageBtn"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/displayQABtn"
            app:layout_constraintLeft_toLeftOf="@+id/displayQABtn"
            app:layout_constraintRight_toRightOf="@+id/displayQABtn" />

        <!-- Seperator -->

        <!-- End Seperator -->

        <!-- Submit Buttons -->

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Submit Review with Photo"
            android:id="@+id/submitReviewWithPhoto"
            app:layout_constraintTop_toTopOf="@+id/seperator"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/seperator"
            app:layout_constraintRight_toRightOf="@+id/seperator"
            app:layout_constraintHorizontal_bias="1.0" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Submit Question"
            android:id="@+id/submitQuestion"
            app:layout_constraintTop_toBottomOf="@+id/submitReviewWithPhoto"
            app:layout_constraintLeft_toLeftOf="@+id/submitReviewWithPhoto"
            app:layout_constraintRight_toRightOf="@+id/submitReviewWithPhoto"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.0" />


        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Submit Answer"
            android:id="@+id/submitAnswer"
            app:layout_constraintTop_toBottomOf="@+id/submitQuestion"
            app:layout_constraintLeft_toLeftOf="@+id/submitQuestion"
            app:layout_constraintRight_toRightOf="@+id/submitQuestion"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Submit Feedback"
            android:id="@+id/submitFeedback"
            app:layout_constraintTop_toBottomOf="@+id/submitAnswer"
            app:layout_constraintLeft_toLeftOf="@+id/submitAnswer"
            app:layout_constraintRight_toRightOf="@+id/submitAnswer"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="1.0" />

        <View
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:id="@+id/seperator"
            android:background="@color/bv_blue_2"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/displayAuthorBtn"
            app:layout_constraintLeft_toLeftOf="@+id/displayAuthorBtn"
            app:layout_constraintRight_toRightOf="@+id/displayAuthorBtn" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Display Bulk Ratings"
            android:id="@+id/displayInlineRatingsPageBtn"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/displayProductPageBtn"
            app:layout_constraintLeft_toLeftOf="@+id/displayProductPageBtn"
            app:layout_constraintRight_toRightOf="@+id/displayProductPageBtn" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Display Author"
            android:id="@+id/displayAuthorBtn"
            app:layout_constraintLeft_toLeftOf="@+id/displayInlineRatingsPageBtn"
            app:layout_constraintRight_toRightOf="@+id/displayInlineRatingsPageBtn"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/displayInlineRatingsPageBtn" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>