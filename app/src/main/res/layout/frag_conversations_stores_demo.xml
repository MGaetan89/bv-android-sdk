<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bazaarvoice.bvsdkdemoandroid.curations.DemoCurationsFragment">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Display Store Reviews"
        android:id="@+id/displayStoreReviewsBtn"
        android:layout_marginTop="44dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Display Stores By Ids"
        android:id="@+id/displayStoresByIds"
        android:layout_below="@+id/displayStoreReviewsBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Display Store Ratings w/ Limit and Offset"
        android:id="@+id/displayStoresWithLimitOffset"
        android:layout_below="@+id/displayStoresByIds"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" />

    <!-- Seperator -->

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:id="@+id/seperator"
        android:background="@color/bv_blue_2"
        android:layout_below="@+id/displayStoresWithLimitOffset"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"/>

    <!-- End Seperator -->

    <!-- Submit Buttons -->

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Store Review with Photo"
        android:id="@+id/submitStoreReviewWithPhoto"
        android:layout_below="@+id/seperator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:id="@+id/seperator2"
        android:background="@color/bv_blue_2"
        android:layout_below="@+id/submitStoreReviewWithPhoto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Queue Store Notification Review"
        android:id="@+id/queueStoreNotificationReview"
        android:layout_below="@+id/seperator2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" />

</RelativeLayout>
