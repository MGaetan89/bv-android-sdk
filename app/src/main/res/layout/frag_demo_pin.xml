<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragDemoPinContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:orientation="vertical">

    <Button
        android:id="@+id/queuePinNotifButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Queue PIN Notification"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="294dp" />

    <Button
        android:id="@+id/getPins"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Display PINs"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/queuePinNotifButton"
        app:layout_constraintRight_toRightOf="@+id/queuePinNotifButton"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/queuePinNotifButton" />
</android.support.constraint.ConstraintLayout>