<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_3"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="vertical">

        <View
            android:id="@+id/conv_spacer_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bv_gray_1"
            android:layout_margin="@dimen/margin_1"/>

        <RelativeLayout
            android:id="@+id/conv_reviews_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/call_to_action_button_height"
            android:layout_below="@id/conv_spacer_1"
            android:paddingTop="@dimen/margin_1"
            android:paddingRight="@dimen/margin_1"
            android:paddingBottom="@dimen/margin_1"
            android:paddingLeft="@dimen/margin_3"
            android:background="?android:attr/selectableItemBackground">
            <TextView
                android:id="@+id/conv_reviews_image"
                android:layout_width="@dimen/call_to_action_image_side"
                android:layout_height="@dimen/call_to_action_image_side"
                android:textSize="@dimen/text_size_headline"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#d3d3d3"
                android:text="@string/fa_icon_comments" />
            <TextView
                android:id="@+id/conv_reviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_button"
                android:textAllCaps="true"
                android:layout_toRightOf="@id/conv_reviews_image"
                android:layout_marginLeft="@dimen/margin_3"
                android:layout_centerVertical="true"/>
            <ProgressBar
                android:id="@+id/conv_reviews_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/conv_reviews_image"
                android:layout_marginLeft="@dimen/margin_3"
                android:layout_centerInParent="true"
                android:visibility="gone"/>
        </RelativeLayout>

        <View
            android:id="@+id/conv_spacer_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bv_gray_1"
            android:layout_margin="@dimen/margin_1"
            android:layout_below="@id/conv_reviews_container"/>

        <RelativeLayout
            android:id="@+id/conv_questions_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/call_to_action_button_height"
            android:layout_below="@id/conv_spacer_2"
            android:paddingTop="@dimen/margin_1"
            android:paddingRight="@dimen/margin_1"
            android:paddingBottom="@dimen/margin_1"
            android:paddingLeft="@dimen/margin_3"
            android:background="?android:attr/selectableItemBackground">
            <TextView
                android:id="@+id/conv_questions_image"
                android:layout_width="@dimen/call_to_action_image_side"
                android:layout_height="@dimen/call_to_action_image_side"
                android:textSize="@dimen/text_size_headline"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#d3d3d3"
                android:text="@string/fa_icon_question_circle" />
            <TextView
                android:id="@+id/conv_questions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_button"
                android:textAllCaps="true"
                android:layout_toRightOf="@id/conv_questions_image"
                android:layout_marginLeft="@dimen/margin_3"
                android:layout_centerVertical="true"/>
            <ProgressBar
                android:id="@+id/conv_questions_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/conv_questions_image"
                android:layout_marginLeft="@dimen/margin_3"
                android:layout_centerInParent="true"
                android:visibility="gone"/>
        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>