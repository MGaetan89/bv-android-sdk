<?xml version="1.0" encoding="utf-8"?>
<resources>
  <declare-styleable name="DemoCarouselView">
    <attr name="carouselHeader" format="string" />
    <attr name="carouselItemShowImage" format="boolean" />
    <attr name="carouselItemShowTitle" format="boolean" />
    <attr name="carouselItemShowRating" format="boolean" />
  </declare-styleable>
  <declare-styleable name="DemoProductsView">
    <attr name="productsOrientation" format="enum">
      <enum name="horizontal" value="0"/>
      <enum name="vertical" value="1"/>
    </attr>
    <attr name="productsSpanCount" format="integer"/>
    <attr name="productsNestedScrollingEnabled" format="boolean"/>
  </declare-styleable>
</resources>